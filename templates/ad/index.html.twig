{% extends 'base.html.twig' %}

{% block title %}Hello AdController!{% endblock %}

{% block body %}
<div class="container pb-5">
    <div class="row">
        {% for ad in ads %}
                <div class="col-lg-4 col-sm-12">
                    <div class="card my-3" >
                        <div class="card-header text-center">
                            {{ad.title}}
                        </div>
                        <img src="{{ad.coverImage}}" style="height:200px; width=100%; display=block">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ad.rooms}} chambres - {{ad.price}} &euro;/nuit</h5>
                            <p class="card-text text-start">{{ad.introduction}}</p>
                            <a href="#" class="btn btn-primary">En savoir plus</a>
                        </div>
                    </div>
                </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
